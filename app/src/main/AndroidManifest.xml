<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roadalerttracker">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="RoadAlert"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoadAlertTracker">
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <!-- SignInActivity as the new launcher -->
        <activity
            android:name=".SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other activities remain the same -->
        <activity
            android:name=".MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".ReportActivity"
            android:exported="false" />
        <activity
            android:name=".MyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="false" /> <!-- MainActivity no longer has the launcher filter -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- Meta-data for Google Maps remains -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCtIPV6UMm0joQ3SIUKEXaQ-EYVENkELd0" />
    </application>

</manifest>